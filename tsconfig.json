{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
